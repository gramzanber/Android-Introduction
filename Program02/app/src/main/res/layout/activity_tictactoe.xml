<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TicTacToeActivity">

    <TextView
        android:id="@+id/introText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Tic-Tac-Toe"
        android:layout_marginTop="@dimen/standardTopPadding"
        android:layout_marginBottom="@dimen/mediumBottomPadding"
        android:textAlignment="center"/>

    <GridLayout
        android:id="@+id/gameBoard"
        android:layout_width="@dimen/gameBoard"
        android:layout_height="@dimen/gameBoard"
        android:layout_below="@id/introText"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/gameButton1"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare" />
        <Button
            android:id="@+id/gameButton2"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
        <Button
            android:id="@+id/gameButton3"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
        <Button
            android:id="@+id/gameButton4"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
        <Button
            android:id="@+id/gameButton5"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
        <Button
            android:id="@+id/gameButton6"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
        <Button
            android:id="@+id/gameButton7"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
        <Button
            android:id="@+id/gameButton8"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
        <Button
            android:id="@+id/gameButton9"
            android:width="@dimen/perfectSquare"
            android:height="@dimen/perfectSquare"/>
    </GridLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/standardTopPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameBoard">
        <Button
            android:id="@+id/newGameButton"
            android:text="New Game"
            android:layout_alignTop="@dimen/standardTopPadding"
            android:layout_width="@dimen/standardButtonWidth"
            android:layout_height="@dimen/standardButtonHeight"
            android:layout_marginLeft="@dimen/standardTopPadding"
            />
        <Button
            android:id="@+id/viewLogButton"
            android:text="View Log"
            android:layout_alignTop="@dimen/standardTopPadding"
            android:layout_width="@dimen/standardButtonWidth"
            android:layout_height="@dimen/standardButtonHeight"
            android:layout_toRightOf="@id/newGameButton" />
    </RelativeLayout>
</RelativeLayout>
